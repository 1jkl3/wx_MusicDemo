/* components/palylist/palylist-music/palylist-music.wxss */

.palylist-left {
  font-size: 32rpx;
  border: 1px solid gray;
  width: 170rpx;
  border-radius: 30rpx;
  background: white;
  height: 50rpx;
  margin-top: 16rpx;
  text-align: center;
  line-height: 50rpx;
  margin-left: 20rpx;
}

.stance {
  width: 10%;
}

.palylist-right-title {
  line-height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
}

.palylist-body {
  margin-top: 10rpx;
  column-count: 2;
  width: 100%;
  column-gap: 10rpx;
}

.palylist-body-item {
  break-inside: avoid;
  width: 100%;
  height: 440rpx;
  margin-bottom: 20rpx;
  background: white;
}

.palylist-body-img {
  width: 100%;
  height: 80%;
  position: relative;
}

.listen-num {
  position: absolute;
  display: inline-block;
  right: 0;
}

.palylist-body-title {
  width: 100%;
  height: 20%;
}

.palylist-body-title text {
  font-size: 28rpx;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.palylist-body-img image {
  width: 100%;
  height: 100%;
}
