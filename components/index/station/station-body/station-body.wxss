/* components/station/station-body/station-body.wxss */
.left-title{
  height: 100%;
}
.left-title text{
  line-height: 80rpx;
  border-left: 6rpx solid red;
  padding-left: 10rpx;
  font-size: 36rpx;
  font-weight: 700;
}
.station-body-right{
  text-align: right;
  padding-right: 10rpx;
}
.station-body-right>icon{
  line-height: 80rpx;
  font-size: 36rpx;
}
.station-body-context{
  display: flex;
  height: 180rpx;
}
.context-img{
  width: 30%;
  height: 100%;
}
.context-img image{
  width: 100%;
  height: 100%;
}
.context-title{
  flex: 1;
  height: 100%;
  padding-top: 20rpx;
}
.context-title-1{
  font-size: 30rpx;
}
.context-title-2{
  font-size: 26rpx;
}