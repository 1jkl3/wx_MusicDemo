<!--components/index/music-list/music-list.wxml-->
<wxs src="../../../utils/utils.wxs" module="tools" />
<view class="music-list-style">
    <music-detail>
      <view slot="tag-slot" style="color: black;">
        <text class="title-before">{{list.L_title}}</text>
        <icon class="iconfont {{list.L_icon}}"></icon>
      </view>
      <view slot="body-slot" class="testbody">
        <block wx:for="{{list.L_items}}" wx:for-item="itemName" 
               wx:key="index2" data-index="{{index2}}" wx:for-index="index2">
          <view class="test-item" bind:tap="getupDetail" data-items="{{itemName}}">
            <view class="item-imgstr">
              <view class="ab-text">
                <icon class="iconfont icon-erji">
                  <text>{{tools.handleData(itemName.getupNum,'ä¸‡')}}</text>
                </icon>
              </view>
              <image src="{{itemName.imgUrl}}" />
            </view>
            <view class="item-title">
              <text>{{itemName.title}}</text>
            </view>
          </view>
        </block>
      </view>
    </music-detail>
</view>